# vim: set filetype=gitconfig:
[alias]
    # Add
    a = add
    aa = add .
    ap = add -p    # Add file chunks, not its complete contents

    # Diff
    d = diff --color-words
    dt = difftool

    # Branching
    b = branch
    bv = branch -avv    # Show branches info (verbose)
    bm = branch -m
    br = branch -d
    bd = branch -D

    # Clone
    cl = clone -v

    # Commit
    amend = commit --amend
    c = commit
    ca = commit -a
    cam = commit -am
    cm = commit -m

    # Checkout
    ck = checkout
    cb = checkout -b
    cf = checkout --

    # Pretty log of the last 10 commits
    l = log -10 --decorate --graph --oneline --pretty=format:'%C(yellow)[%h]%Creset%C(auto)%d%Creset - %C(blue)%cd%Creset by %C(green)<%ae>%Creset%n%s%n' --abbrev-commit

    # Init
    i = init
    ib = init --bare

    # Stash
    st = stash
    stu = stash -u
    sta = stash apply
    stl = stash list
    stp = stash pop

    # Status
    s = status
    ss = status -s    # Short status

[color]
    ui = auto

[color "branch"]
        # Railscasts dark theme
    current = green bold reverse
    local = green bold
    remote = blue
    upstream = magenta

        # Solarized theme
    # current = green reverse
    # local = green
    # remote = blue
    # upstream = magenta

[color "diff"]
        # Railscasts dark theme
    meta = magenta bold
    frag = yellow bold
    old = red bold reverse
    new = green bold reverse

        # Solarized theme
    # meta = magenta
    # frag = black
    # old = red reverse
    # new = green reverse

[color "status"]
        # Railscasts dark theme
    added = green bold ul
    changed = yellow bold ul
    untracked = magenta bold

        # Solarized theme
    # added = green ul
    # changed = yellow ul
    # untracked = magenta

[core]
    editor = vim
    excludesfile = ~/.gitignore

[diff]
    tool = vimdiff

[difftool]
    prompt = false

[merge]
    tool = vimdiff

[push]
    default = simple

[url "https://github.com/"]
    insteadOf = ghh:

[url "git@github.com:"]
    insteadOf = ghs:

