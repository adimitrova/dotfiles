# vim: set filetype=gitconfig:
[alias]
    # Add
    a = add
    aa = add .
    ap = add -p    # Add file chunks, not its complete contents

    # Diff
    d = diff --color-words --patience
    dt = difftool

    # Branching
    b = branch
    bv = branch -avv    # Show branches info (verbose)
    bm = branch -m
    br = branch -d
    bd = branch -D

    # Clone
    cl = clone -v

    # Commit
    amend = commit --amend
    c = commit
    ca = commit -a
    cam = !git add . && git commit -am
    cm = commit -m

    # Checkout
    ck = checkout
    ckb = checkout -
    ckm = checkout master
    cb = checkout -b
    cf = checkout --

    # Log
    ll = "log --decorate --graph --pretty='%C(yellow)[%H]%Creset%C(auto)%d%Creset%n  %s%n%n\
    Date: %C(blue)%cd%Creset%n\
    Author: %C(red)%an%Creset %C(green)<%ae>%Creset%n' --date=format:'%e %B, %Y - %H:%M:%S'"
    ls = log --decorate --pretty=format:'%C(yellow)[%h]%Creset%C(auto)%d%Creset - %s %C(blue)(%cr)%Creset %C(green)<%ae>%Creset'

    # Init
    i = init
    ib = init --bare

    # Pull/Push
    pl = pull --prune
    pt = push -u origin
    pu = push

    # Remote
    ra = remote add
    rb = browse
    ru = remote set-url
    rv = remote -v

    # Reset
    r = reset
    rh = reset --hard
    rs = reset --soft

    # Stash
    st = stash
    sta = stash apply
    stc = stash clear
    stl = stash list
    stp = stash pop
    stu = stash -u

    # Status
    s = status
    ss = status -s --branch    # Short status

[color]
    ui = auto

[color "branch"]
        # Railscasts dark theme
    current = green bold reverse
    local = green bold
    remote = blue
    upstream = magenta

        # Solarized theme
    # current = green reverse
    # local = green
    # remote = blue
    # upstream = magenta

[color "diff"]
        # Railscasts dark theme
    meta = magenta bold
    frag = yellow bold
    old = red bold reverse
    new = green bold reverse

        # Solarized theme
    # meta = magenta
    # frag = black
    # old = red reverse
    # new = green reverse

[color "status"]
        # Railscasts dark theme
    added = green bold ul
    changed = yellow bold ul
    untracked = magenta bold

        # Solarized theme
    # added = green ul
    # changed = yellow ul
    # untracked = magenta

[core]
    editor = vim
    excludesfile = ~/.gitignore

[diff]
    tool = vimdiff

[difftool]
    prompt = false

[github]
    user = santiaro90

[merge]
    tool = vimdiff

[push]
    default = simple

[url "https://github.com/"]
    insteadOf = ghh:

[url "git@github.com:"]
    insteadOf = ghs:

