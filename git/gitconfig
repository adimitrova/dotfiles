# vim: set filetype=gitconfig:
[alias]
    # Add
    a = add
    aa = add .
    ap = add -p    # Add file chunks, not its complete contents

    # Diff
    d = diff --color-words
    dt = difftool

    # Branching
    b = branch -avv    # Show branches info (verbose)
    bm = branch -m
    br = branch -d
    bd = branch -D

    # Commit
    am = commit --amend
    c = commit
    ca = commit -a
    cam = commit -am
    cm = commit -m

    # Checkout
    ck = checkout
    cb = checkout -b
    cf = checkout --

    # Pretty log of the last 10 commits
    l = log -10 --decorate --graph --oneline --pretty=format:'%C(yellow)[%h]%Creset%C(auto)%d%Creset - %C(blue)%cr%Creset by %C(green)<%ae>%Creset%n%s%n' --abbrev-commit

    # Status
    s = status
    ss = status -s    # Short status

[color]
    ui = auto

[color "branch"]
    current = blue bold reverse
    local = blue bold
    remote = yellow

[color "diff"]
    meta = magenta bold
    frag = yellow bold
    old = red bold
    new = green bold

[color "status"]
    added = green bold ul
    changed = yellow bold ul 
    untracked = magenta bold

[core]
    editor = vim
    excludesfile = ~/.gitignore

[diff]
    tool = vimdiff

[difftool]
    prompt = false

[merge]
    tool = vimdiff

[push]
    default = simple

[url "https://github.com/"]
    insteadOf = gh:

[url "git@github.com:"]
    insteadOf = gh@

[user]
    email = santiaro90@gmail.com
    name = Santiago Alvarez Rodriguez
