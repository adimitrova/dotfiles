{
  "breadcrumbs.enabled": false,

  "editor.find.seedSearchStringFromSelection": false,
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "editor.fontSize": 16,
  "editor.lineNumbers": "relative",
  "editor.minimap.enabled": false,
  "editor.tabSize": 2,

  "emmet.showExpandedAbbreviation": "never",

  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
  ],

  "explorer.openEditors.visible": 0,

  "git.detectSubmodules": false,

  // GitLens
  "gitlens.advanced.messages": {
    "suppressCommitHasNoPreviousCommitWarning": false,
    "suppressCommitNotFoundWarning": false,
    "suppressFileNotUnderSourceControlWarning": false,
    "suppressGitVersionWarning": false,
    "suppressLineUncommittedWarning": false,
    "suppressNoRepositoryWarning": false,
    "suppressUpdateNotice": false,
    "suppressWelcomeNotice": true
  },

  "gitlens.blame.compact": false,
  "gitlens.blame.dateFormat": "YYYY-MM-DD HH:mm:ss",
  "gitlens.blame.format": "${id|12} ${(author|20?)} ${date}",
  "gitlens.blame.heatmap.enabled": false,
  "gitlens.blame.highlight.enabled": false,
  "gitlens.blame.separateLines": false,

  "gitlens.codeLens.enabled": true,
  "gitlens.currentLine.enabled": false,
  "gitlens.keymap": "none",
  "gitlens.showWhatsNewAfterUpgrades": false,

  "gitlens.views.repositories.autoRefresh": true,
  "gitlens.views.lineHistory.enabled": false,
  "gitlens.views.compare.enabled": false,

  // VSCode Vim
  "vim.debug.loggingLevelForConsole": "debug",
  "vim.enableNeovim": true,
  "vim.foldfix": true,
  "vim.hlsearch": true,
  "vim.incsearch": true,
  "vim.leader": "<space>",
  "vim.neovimPath": "/usr/local/bin/nvim",
  "vim.substituteGlobalFlag": true,
  "vim.visualstar": true,

  "vim.insertModeKeyBindings": [
    {
      "before": ["k", "j"],
      "after": ["<Esc>"]
    }
  ],

  "vim.normalModeKeyBindingsNonRecursive": [
    // Sidebar
    {
      "before": ["leader", "."],
      "commands": ["workbench.files.action.focusFilesExplorer"]
    },

    // Windows
    {
      "before": ["leader", "n"],
      "commands": ["workbench.action.nextEditorInGroup"]
    },
    {
      "before": ["leader", "p"],
      "commands": ["workbench.action.previousEditorInGroup"]
    },
    {
      "before": ["leader", "z"],
      "commands": ["workbench.action.toggleZenMode"]
    },
    {
      "before": ["<C-h>"],
      "after": ["<C-w>", "h"]
    },
    {
      "before": ["<C-l>"],
      "after": ["<C-w>", "l"]
    },

    // Editing
    {
      "before": ["leader", "o"],
      "commands": [
        "editor.action.insertLineAfter",
        "extension.vim_up"
      ]
    },
    {
      "before": ["leader", "O"],
      "commands": [
        "editor.action.insertLineBefore",
        "extension.vim_down"
      ]
    },

    // Search
    {
      "before": ["<C-f>"],
      "commands": ["actions.find"]
    },

    // Terminal
    {
      "before": ["<C-t>"],
      "commands": ["workbench.action.terminal.toggleTerminal"]
    },

    // Git
    {
      "before": ["leader", "g", "s"],
      "commands": [
        "workbench.action.terminal.toggleTerminal",
        {
          "command": "workbench.action.terminal.sendSequence",
          "args": { "text": "vim ${workspaceFolder} '+Gstatus | only' && exit\u000d" }
        }
      ]
    },
    {
      "before": ["leader", "g", "d"],
      "commands": [
        "workbench.action.terminal.focus",
        {
          "command": "workbench.action.terminal.sendSequence",
          "args": { "text": "vim ${relativeFile} +Gdiff && exit\u000d" }
        }
      ]
    },
    {
      "before": ["leader", "g", "b"],
      "commands": [
        "workbench.action.terminal.toggleTerminal",
        {
          "command": "workbench.action.terminal.sendSequence",
          "args": { "text": "vim ${relativeFile} +Gblame && exit\u000d" }
        }
      ]
    },
    {
      "before": ["leader", "g", "w"],
      "commands": ["git.stage"]
    },
    {
      "before": ["leader", "g", "r"],
      "commands": [
        "workbench.action.terminal.toggleTerminal",
        {
          "command": "workbench.action.terminal.sendSequence",
          "args": { "text": "vim ${relativeFile} +Gread && exit\u000d" }
        }
      ]
    },

    // Other
    {
      "before": [";"],
      "after": [":"]
    },
    {
      "before": [":"],
      "after": [";"]
    },
    {
      "before": ["leader", "c"],
      "commands": [":nohl"]
    },
    {
      "before": ["leader", "r"],
      "commands": ["workbench.action.reloadWindow"]
    }
  ],

  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": [";"],
      "after": [":"]
    }
  ],

  "terminal.integrated.commandsToSkipShell": [
    "-workbench.action.quickOpen"
  ],

  "terminal.integrated.fontSize": 14,

  "window.zoomLevel": 0,

  "workbench.colorTheme": "One Dark Pro",
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.list.automaticKeyboardNavigation": false,
  "workbench.startupEditor": "newUntitledFile",

  "zenMode.centerLayout": false,
  "zenMode.hideLineNumbers": false,
  "zenMode.hideStatusBar": false,
  "zenMode.hideTabs": false
}
