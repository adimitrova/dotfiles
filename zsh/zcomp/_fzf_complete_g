# vim: set ft=zsh ts=4 sw=4 :

# Complete git commands with fzf

local cmd match

cmd=$(echo "$@" | cut -d' ' -f2)
case $cmd in
    (cf)
        match=$(_fzf_complete_g_cf)
        ;;
    (a)
        match=$(_fzf_complete_g_a)
        ;;
esac

LBUFFER="$lbuf$match"
zle redisplay
typeset -f zle-line-init > /dev/null && zle zle-line-init
