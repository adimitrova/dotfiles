# Navigation
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias dotf="[[ -d $HOME/dotfiles ]] && cd $HOME/dotfiles"
alias lsa="ls -alh"

# Apt
alias apti="sudo apt-get install -y"
alias aptu="sudo apt-get update -y"
alias aptup="aptu && sudo apt-get upgrade -y"
alias aptp="sudo apt-get purge -y"
alias aptc="sudo apt-get clean && sudo apt-get autoremove"

# Git
alias g="git"

# Editor
alias e="$EDITOR"

# Edit config files
alias ealias="dotf && e zsh/shell_aliases"
alias efunc="dotf && e zsh/functions"
alias egitc="dotf && e git/gitconfig"
alias eprompt="dotf && e zsh/themes/prompt_santiaro_setup"
alias etmuxc="dotf && e tmux/tmux.conf"

# Misc
command -v pbcopy > /dev/null 2>&1 || alias pbcopy="xsel -ib"
command -v pbpaste > /dev/null 2>&1 || alias pbpaste="xsel -ob"
alias off="sudo shutdown -h now"

# Rails
alias b="bundle"
alias b:i="b install"
alias b:e="b exec"

alias r:c="rails console"
alias r:n="rails new"
alias r:sbox="rails console --sandbox"
alias r:s="rails server"

alias r:gc="rails generate controller"
alias r:gm="rails generate model"
alias r:gs="rails generate scaffold"

alias r:m="b:e rake db:migrate"
alias r:t="b:e rake test"

# Node
alias npm:i="npm install"
alias npm:u="npm uninstall"
alias npm:is="npm:i --save"
alias npm:id="npm:i --save-dev"
alias npm:us="npm:u --save"
alias npm:ud="npm:u --save-dev"

# Bower
alias bo:i="bower install"
alias bo:u="bower uninstall"
alias bo:is="bo:i --save"
alias bo:id="bo:i --save-dev"
alias bo:us="bo:u --save"
alias bo:ud="bo:u --save-dev"
